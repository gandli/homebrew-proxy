# EditorConfig 配置文件
# 统一不同编辑器的代码格式
# 更多信息: https://editorconfig.org/

root = true

# 所有文件的默认设置
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

# Ruby 文件 (Cask 文件)
[*.rb]
indent_style = space
indent_size = 2
max_line_length = 120

# YAML 文件 (GitHub Actions, Issue 模板等)
[*.{yml,yaml}]
indent_style = space
indent_size = 2
max_line_length = 120

# Markdown 文件
[*.md]
trim_trailing_whitespace = false
max_line_length = 80

# JSON 文件
[*.json]
indent_style = space
indent_size = 2

# Shell 脚本
[*.sh]
indent_style = space
indent_size = 2
max_line_length = 120

# Makefile (必须使用 tab)
[Makefile]
indent_style = tab
indent_size = 4

# Git 配置文件
[.gitconfig]
indent_style = tab

# 忽略某些文件的尾随空格检查
[*.{patch,diff}]
trim_trailing_whitespace = false
